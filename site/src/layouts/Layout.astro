---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>

  <footer>
    <a href="https://github.com/pikesley/css-tricks"><img src="/github-mark.svg"></a>

  </footer>
</html>

<style is:global>
  @import url("https://fonts.googleapis.com/css?family=Roboto");
  body {
    font-family: "Roboto";
    display: grid;
    place-items: center;
    min-height: 100vh;
    overflow: hidden;
  }

  footer {
    position: fixed;
    bottom: 0;
    padding: 1rem;
  }

  img {
    max-height: 2rem;
  }

</style>
